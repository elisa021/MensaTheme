<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".LoginActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@color/white"
        android:layout_marginTop="120dp"
        android:src="@drawable/ginicook_photoroom"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/etLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/etLogin_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="160dp"
        android:importantForAutofill="no"
        android:text="Effettua l'accesso per continuare"
        android:textSize="16sp"
        android:layout_below = "@+id/etLogin"
        tools:ignore="HardcodedText,LabelFor,TextFields" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_corners_grey">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/outline_alternate_email_24"
            tools:ignore="RtlHardcoded"
            android:importantForAccessibility="no" />

        <EditText
            android:id="@+id/etEmailAddress"
            android:layout_width="205dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-20dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="340dp"
        android:background="@drawable/rounded_corners_white"
        style="@style/TextInputLayoutCustom1"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/baseline_lock_outline_24"
            tools:ignore="RtlHardcoded"
            android:importantForAccessibility="no" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="229dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="Autofill,HardcodedText,LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonAccedi"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="460dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/rounded_corners_red"
        android:gravity="center"
        android:text="Accedi"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:ignore="HardcodedText,RtlCompat" />


    <TextView
        android:id="@+id/textViewPswDim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="620dp"
        android:text="Hai dimenticato la passsword?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non hai un account?"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewRegistrati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="Registrati"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

